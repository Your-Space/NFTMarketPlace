@model NftViewItemModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 class="text-dark">Nft Detail</h2>

@Html.Partial("_NftDetailsPartial", Model)

@* list nft *@

<div class="row mt-4">
    <div class="col-md-4"></div>
    <div class="col-md-8">
        <h4>List on Market</h4>
        <hr/>
    </div>
</div>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
        <form asp-action="ClassicSale" method="post" enctype="multipart/form-data">
        
            <div class="p-4 rounded border">
        
                <h3>@ViewBag.message</h3>
                
                <div class="form-group row">
                    <div class="col-2">
                        <label>Price: </label>
                    </div>
                    <div class="col-10">
                        @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                    <span class="text-danger"> @ViewBag.ErrorMessage  </span>
                </div>
                
                <div class="form-group ">
                    <input type="submit" class="btn btn-dark" value="Save" />
                </div>
            </div>
            
        </form>
    </div>
    
</div>

<div>
    <a class="text-dark" asp-action="Index" asp-controller="Nft">Back to List</a>
</div>
